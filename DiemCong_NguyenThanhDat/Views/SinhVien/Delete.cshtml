@model DiemCong_NguyenThanhDat.Models.SinhVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xoá Sinh Viên</h2>

<h3>Bạn có chắc muốn xoá sinh viên này không?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Mã sinh viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSV)
        </dd>

        <dt>
            Họ tên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Giới tính:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            Ngày sinh:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Hình:
        </dt>

        <dd>
            <td>
                <img src="@Model.Hinh" alt="hinh thumbnail" width="250px" />
            </td>
        </dd>

        <dt>
            Mã ngành:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNganh)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ListSinhVien")
        </div>
    }
</div>
